# Solar AI Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (Optional - Platform works without these but with limited features)
# =============================================================================

# Google Gemini AI API Key (for AI recommendations)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# NASA POWER API (No key required - automatically used)
# =============================================================================
NASA_API_BASE_URL=https://power.larc.nasa.gov/api

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (true/false)
DEBUG_MODE=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=10

# Neural network background quality (low, medium, high)
NEURAL_QUALITY=high

# Enable 3D neural network (true/false)
ENABLE_3D_NEURAL=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum number of neurons in 3D background
MAX_NEURONS=100

# Target FPS for animations
TARGET_FPS=60

# Enable adaptive quality based on device performance
ADAPTIVE_QUALITY=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Session timeout in minutes
SESSION_TIMEOUT=60

# Enable HTTPS redirect (for production)
FORCE_HTTPS=false

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8503,http://127.0.0.1:8503

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Environment type (development, staging, production)
ENVIRONMENT=development

# Server port
PORT=8503

# Server host
HOST=localhost

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable PDF report generation
ENABLE_PDF_REPORTS=true

# Enable AI recommendations
ENABLE_AI_RECOMMENDATIONS=true

# Enable 3D visualization
ENABLE_3D_VISUALIZATION=true

# Enable advanced analytics
ENABLE_ANALYTICS=false
