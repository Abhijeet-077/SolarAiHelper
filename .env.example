# Solar AI Helper - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Google Generative AI (Gemini) API Key
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_LLM_API_KEY=your_google_gemini_api_key_here

# NASA POWER API Key
# Get your key from: https://power.larc.nasa.gov/data-access-viewer/
NASA_API_KEY=your_nasa_power_api_key_here

# =============================================================================
# OPTIONAL API KEYS (for enhanced functionality)
# =============================================================================

# Google Maps API Key (for enhanced geolocation services)
# Get your key from: https://developers.google.com/maps/documentation/javascript/get-api-key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# OpenWeather API Key (for detailed weather analysis)
# Get your key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment (development, staging, production)
APP_ENV=development

# Debug Mode (true/false)
DEBUG=true

# Application Port
PORT=5000

# Application Host
HOST=0.0.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for session management (generate a random string)
SECRET_KEY=your_secret_key_here

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=60

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=10

# =============================================================================
# DATABASE CONFIGURATION (if using database)
# =============================================================================

# Database URL (if using database for storing analysis results)
# DATABASE_URL=sqlite:///solar_analysis.db

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================

# Timeout for external API calls (in seconds)
API_TIMEOUT=30

# Maximum retries for failed API calls
API_MAX_RETRIES=3

# Retry delay (in seconds)
API_RETRY_DELAY=2

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/solar_ai_helper.log

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Enable caching (true/false)
ENABLE_CACHING=true

# Cache timeout (in seconds)
CACHE_TIMEOUT=3600

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable 3D visualization features
ENABLE_3D_VISUALIZATION=true

# Enable advanced computer vision analysis
ENABLE_ADVANCED_CV=true

# Enable professional reporting features
ENABLE_PROFESSIONAL_REPORTS=true

# Enable chatbot functionality
ENABLE_CHATBOT=true

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Enable application monitoring
ENABLE_MONITORING=false

# Analytics tracking ID (if using analytics)
# ANALYTICS_TRACKING_ID=your_analytics_id_here

# Error reporting service API key
# ERROR_REPORTING_API_KEY=your_error_reporting_key_here

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit the actual .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different API keys for development, staging, and production
# 4. Monitor your API usage to avoid unexpected charges
# 5. Some APIs have free tiers with usage limits
# 6. Ensure your API keys have appropriate permissions/scopes
# 7. Consider using API key management services for production deployments
#
